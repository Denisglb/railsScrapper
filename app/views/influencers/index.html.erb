<div class="header">
	<div class="logo">IRM</div
	><div class="title">Influencers</div>
</div>
<div class="page">
	<div class="menu">
		<a href="/influencers" class="active">Influencers</a>
		<a href="/tags">Tags</a>
		<a href="/influencers/new">Add Influencer</a>
		<a href="/tags/new">Add Tag</a>
	</div>
	<div class="content">
		<table>
			<tr>
				<td>User</td>
				<td>Biography</td>
				<td>Followers</td>
				<td>Following</td>
				<td> Follower ratio </td>
				<td> Engagement Rate </td>
				<td>Number Of Posts</td>
				<td>Business Account</td>
				<td>Business Category</td>
			</tr>
			<% @influencer.each do |f| %>
			<tr>
				<td>@<%=f.user %></td>
				<td><%= f.biography %></td>
				<td><%= f.followers %></td>
				<td><%= f.following %></td>
				<td><%= f.following.to_i == 0 ? 1 : f.followers.to_i / f.following.to_i %></td>

				<td><%= ((f.posts.average(:likes).to_f / f.followers.to_f) * 100).round(2)%> %</td>

				<td><%= f.numberOfPosts %></td>
				<td><%= f.businessAcounnt== 'f' ? 'No':'Yes' %></td>
				<td><%= f.businessCategory %></td>
				<td><%= link_to 'Show', influencer_path(f) %> </td>
			</tr>
			<% end %>
		</table>
	</div>
</div>